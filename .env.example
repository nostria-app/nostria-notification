# Environment variables
NODE_ENV=development
PORT=3000

# Logging
LOG_LEVEL=info

# Nostria API Configuration
NOSTRIA_API_URL=http://localhost:3001

# API Authentication
API_KEY=your-api-key-here

# Daemon Configuration
ENABLE_DAEMON=true

# Admin Configuration
# Comma-separated list of public keys that have admin access to list endpoints
ADMIN_PUBKEYS=PUBKEY1,PUBKEY2

# VAPID Keys for Web Push (generate using: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-public-key-here
VAPID_PRIVATE_KEY=your-private-key-here
VAPID_EMAIL=mailto:your-email@example.com
